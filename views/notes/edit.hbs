<!-- Edit Note header -->
<h1>Edit Note</h1>

<!-- Form to update the note -->
<form action="/notes/{{note._id}}/edit" method="POST" enctype="multipart/form-data">
  <!-- Input field for title with existing value prefilled -->
  <input type="text" name="title" value="{{note.title}}" required><br>

  <!-- Textarea for body with existing value prefilled -->
  <textarea name="body" required>{{note.body}}</textarea><br>

  <!-- Upload file input (optional additional files) -->
  <input type="file" name="files" multiple><br>

  <!-- Submit form button -->
  <button type="submit">Update Note</button>
</form>
